#!/bin/bash

set -e;

SYS=`uname -o || uname -s`;		# Darwin doesn't support -o

if [[ $UID != 0 ]]; then
	SUDO="sudo";
fi

if [[ $1 == release || $1 == ci ]]; then
	echo -n 1 >| 0-RELEASE;
fi

INSTALL_ROOT=/usr/local;

if [[ $SYS == Darwin ]]; then

	if ! command -v brew > /dev/null; then
		echo Installing Homebrew...;
		sudo /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)";
	fi;

	if [[ $1 != ci ]]; then
		if [[ ! -f ../JX/Makefile && -z $JX_ROOT ]]; then
			brew tap jafl/jx;
			brew install jafl/jx/jx-application-framework;
		fi
	fi

	INSTALL_ROOT=`brew --prefix`;

elif command -v apt-get; then

	# debian

	if [[ $1 != ci && -z $SNAPCRAFT_BUILD_ENVIRONMENT ]]; then
		$SUDO apt update;

		if [[ ! -f ../JX/Makefile && -z $JX_ROOT ]]; then
			curl -O http://libjx.sourceforge.net/release/jx-application-framework.deb;
			sudo apt install ./jx-application-framework.deb;
		fi
	fi;

fi

if [[ ! -d $INSTALL_ROOT/include/reflex/ && -z $SNAPCRAFT_PART_INSTALL ]]; then

	echo "Please install RE/flex library.";
	exit 1;

fi

if [[ ! -d $INSTALL_ROOT/include/jx-af/ && ! -f ../JX/Makefile && -z $JX_ROOT ]]; then

	echo "Please install jx-application-framework.";
	exit 1;

fi

makemake;
